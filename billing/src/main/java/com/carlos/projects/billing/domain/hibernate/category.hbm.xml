<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class
		name="Category"
		table="CATEGORY">
		<id name="name" type="string" column="CATEGORY_NAME"/>
		<property name="description" type="string" 
				  column="CATEGORY_DESCRIPTION"/>
		<set name="components" table="COMPONENT">
			<key column="COMPONENT_ID"/>
			<composite-element class="Component">
				<property name="code" type="string" 
						  column="COMPONENT_CODE" not-null="true"/>
				<property name="description" type="string"
						  column="COMPONENT_DESCRIPTION" not-null="true"/>
				<property name="price" type="double"
						  column="COMPONENT_PRICE" not-null="true"/>
				<property name="minimumDiscount" type="double"
						  column="COMPONENT_MINIMUM_DISCOUNT" not-null="true"/>
				<property name="maximumDiscount" type="double"
						  column="COMPONENT_MAXIMUM_DISCOUNT" not-null="true"/>
			</composite-element>
		</set>
		<many-to-one name="family" column="FAMILY_ID" 
					 class="Family" not-null="true"/>
	</class>
</hibernate-mapping>